#!/usr/bin/env python
from argparse import ArgumentParser
from os import CLONE_NEWUSER, chdir, chroot, execve, unshare

ap = ArgumentParser()
ap.add_argument('newroot')
args = ap.parse_args()

unshare(CLONE_NEWUSER)  # Gain us CAP_SYS_CHROOT
chdir(args.newroot)
chroot('.')
execve('bin/sh', [ 'sh', '-l' ], {})
